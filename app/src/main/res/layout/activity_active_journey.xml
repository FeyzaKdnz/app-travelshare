<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            app:queryHint="Find a spot in route..." />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvStepCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1 of 5"
        android:textColor="#757575"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/searchContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCurrentSpot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvStepCounter"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2">

                <ImageView
                    android:id="@+id/imgSpotMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/paris"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvCategoryBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CULTURE"
                    android:background="#CC000000"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_margin="16dp"
                    android:layout_gravity="top|start"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/tvSpotName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Musée du Louvre"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvSpotDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description placeholder...\nPrice: 15€\nDuration: 2h"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingMultiplier="1.2"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewOnMap"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="View on Map"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                app:icon="@drawable/ic_menu_compass"
                app:iconTint="#000000"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextStep"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Next Step"
                android:textColor="#FFFFFF"
                app:backgroundTint="#000000"
                app:icon="@android:drawable/ic_media_next"
                app:iconTint="#FFFFFF"
                app:iconGravity="textEnd"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnFinalize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalize Journey"
            android:textColor="#D32F2F"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>