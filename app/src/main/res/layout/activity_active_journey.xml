<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnOpenTimeline"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/outline_explore_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#000000"
                android:contentDescription="Timeline" />

            <androidx.cardview.widget.CardView
                android:id="@+id/searchContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchStep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:iconifiedByDefault="false"
                    app:queryHint="Find a spot..." />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvStepCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 of 5"
            android:textColor="#757575"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCurrentSpot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvStepCounter"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2">

                    <ImageView
                        android:id="@+id/imgSpotMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_paris" />

                    <TextView
                        android:id="@+id/tvAuthorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        android:background="#80000000"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="8dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvCategoryBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#CC000000"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_margin="16dp"
                        android:layout_gravity="top|start"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:id="@+id/tvSpotName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvSpotDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:lineSpacingMultiplier="1.2"/>

                    <TextView
                        android:id="@+id/tvOpeningHours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5"
                        android:padding="12dp"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/bottomNavContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewOnMap"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="View on Map"
                    android:textColor="#000000"
                    app:backgroundTint="#FFFFFF"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp"
                    app:icon="@drawable/outline_map_24"
                    app:iconTint="#000000"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextStep"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Next Step"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#000000"
                    app:icon="@android:drawable/ic_media_next"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textEnd"
                    app:cornerRadius="12dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnFinalize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalize Journey"
                android:textColor="#D32F2F"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- LA TIMELINE (Panneau latÃ©ral gauche) -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Journey Timeline"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTimeline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="24dp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
